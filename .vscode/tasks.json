{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install npm deps",
			"type": "shell",
			"command": "npm",
			"args": [
				"install"
			],
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Initial fetch",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"fetch"
			],
			"group": "build"
		},
		{
			"label": "Start dev server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"isBackground": true,
			"group": "build"
		}
	]
}